apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: {{ DEPLOYMENT_NAME }}-minion
  namespace: {{ NAMESPACE }}
  labels:
    name: {{ DEPLOYMENT_NAME }}-minion
spec:
  selector:
    matchLabels:
      name: {{ DEPLOYMENT_NAME }}-minion
  hostAliases:
    - ip: "{{ DEPLOYMENT_NAME }}-master"
      hostnames:
        - "{{ SALT_API_HOST }}"
  template:
    metadata:
      name: {{ DEPLOYMENT_NAME }}-minion
      labels:
        name: {{ DEPLOYMENT_NAME }}-minion
    spec:
      containers:
      - name: saltstack-minion
        image: {{ IMAGE_MINION }}
        imagePullPolicy: Always
        env:
          - name: API_USERNAME
            value: "{{ API_USERNAME }}"
          - name: API_PASSWORD
            value: "{{ API_PASSWORD }}"
        resources:
          limits:
            memory: 500Mi
            cpu: 400m
          requests:
            cpu: 100m
            memory: 200Mi
        volumeMounts:
          - mountPath: /etc/salt/minion.d/
            name: saltstack-minion
      terminationGracePeriodSeconds: 60
      volumes:
        - name: saltstack-minion
          configMap:
            name: {{ DEPLOYMENT_NAME }}-minion-config