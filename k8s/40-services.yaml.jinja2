apiVersion: v1
kind: Service
metadata:
  name: {{ DEPLOYMENT_NAME }}
  namespace: {{ NAMESPACE }}
  labels:
    name: {{ DEPLOYMENT_NAME }}
spec:
  type: NodePort
  ports:
  - port: 80
    targetPort: 80
    name: {{ DEPLOYMENT_NAME }}-http
  selector:
    name: {{ DEPLOYMENT_NAME }}
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: {{ DEPLOYMENT_NAME }}-ingress
  namespace: {{ NAMESPACE }}
  annotations:
    kubernetes.io/ingress.global-static-ip-name: "{{ DEPLOYMENT_NAME }}"
spec:
  tls:
    - secretName: {{ DEPLOYMENT_NAME }}-tls
  backend:
    serviceName: {{ DEPLOYMENT_NAME }}
    servicePort: {{ DEPLOYMENT_NAME }}-http
  rules:
  - host: {{ FQDN }}
    http:
      paths:
      - path: /
        backend:
          serviceName: {{ DEPLOYMENT_NAME }}
          servicePort: {{ DEPLOYMENT_NAME }}-http
