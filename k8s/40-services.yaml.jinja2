apiVersion: v1
kind: Service
metadata:
  name: {{ DEPLOYMENT_NAME }}-master
  namespace: {{ NAMESPACE }}
  labels:
    name: {{ DEPLOYMENT_NAME }}-master
spec:
  type: NodePort
  ports:
    - port: 4505
      targetPort: 4505
      name: {{ DEPLOYMENT_NAME }}-4505
    - port: 4506
      targetPort: 4506
      name: {{ DEPLOYMENT_NAME }}-4506
  selector:
    name: {{ DEPLOYMENT_NAME }}-master
---
apiVersion: v1
kind: Service
metadata:
  name: {{ DEPLOYMENT_NAME }}-api
  namespace: {{ NAMESPACE }}
  labels:
    name: {{ DEPLOYMENT_NAME }}-master
spec:
  type: NodePort
  ports:
    - port: 80
      targetPort: 80
      name: {{ DEPLOYMENT_NAME }}-80
    - port: 443
      targetPort: 443
      name: {{ DEPLOYMENT_NAME }}-443
  selector:
    name: {{ DEPLOYMENT_NAME }}-master

